{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}

<main>
  <section>
    <form class="form" method="POST" action="/user-create">
      <h1 class="form__title">Registration</h1>
      <div class="form__content">
        <div class="form__field">
          <label for="email" class="form__label">Email Address:</label>
          <input type="email" name="email" class="form__input">
        </div>
        <div class="form__field">
          <label for="password" class="form__label">Password:</label>
          <input type="password" name="password" class="form__input">
        </div>
        <div class="form__field">
          <label for="login" class="form__label"> Login:</label>
          <input type="text" name="login" class="form__input">
        </div>
        <button class="form__button btn btn-secondary" type="submit">Submit</button>
      </div>
    </form>
  </section>

  <section>
    <div class="form">
      <h1 class="form__title"> Users list </h1>
      <div class="user-list">
        {{#with data.users}}
          {{#if isEmpty}}
            <mark> List is empty </mark>
            {{else}}
            <ul>
              {{#each list}}
                <li>{{email}} | {{login}} | <a href="/user-delete?id={{id}}">(Delete)</a></li>
              {{/each}}
            </ul>
          {{/if}}
        {{/with}}
      </div>
    </div>
  </section>

  <section>
    <form class="form" method="POST" action="/user-update">
      <h1 class="form__title"> Update email </h1>
      <div class="form__content">
        <div class="form__field">
          <label for="id" class="form__label"> ID: </label>
          <input type="id" name="id" class="form__input">
        </div>
        <div class="form__field">
          <label for="email" class="form__label"> New Email:</label>
          <input type="email" name="email" class="form__input">
        </div>
        <div class="form__field">
          <label for="password" class="form__label"> Password:</label>
          <input type="password" name="password" class="form__input">
        </div>
        <button class="form__button btn btn-secondary" type="submit"> Submit </button>
      </div>
    </form>
  </section>
</main>

